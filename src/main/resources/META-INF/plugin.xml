<idea-plugin>
    <id>com.markbakos.todo</id>
    <name>TODO Task Manager</name>
    <version>1.4.0</version>
    <vendor>Mark Bakos</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.markbakos.todo.ui.TodoToolWindowFactory"
                id="TODO Manager"
                anchor="right"
                secondary="true"
                icon="AllIcons.Actions.ListFiles"
        />
    </extensions>
</idea-plugin>
